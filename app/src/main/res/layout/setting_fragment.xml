<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newsFragmentBG"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:background="@color/header"
        android:gravity="center"
        android:text="@string/mySetting"
        android:textColor="@color/searchButton"
        android:textSize="@dimen/newsShowTitleSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="@dimen/paddingLR"
        android:paddingEnd="@dimen/paddingLR">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/nightMode"
            android:textColor="@color/mainText"
            android:textSize="@dimen/textSize" />

        <Switch
            android:id="@+id/nightModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:switchMinWidth="40dp" />
    </RelativeLayout>
</LinearLayout>